---
export interface Props {
	href: string
	label: string
}

const { href, label } = Astro.props
---

<a
	href={href}
	class='flex items-center md:w-auto justify-center gap-2 md:px-4 md:py-2 hover:bg-gray-50 md:rounded-2xl border border-transparent hover:border-gray-200 transition-all min-h-[50px] md:text-base px-5 py-4 text-xl duration-300 w-full'
>
	{label}
</a>
