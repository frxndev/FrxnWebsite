---
export interface Props {
  heading: string
  lowerHeading: string
  slug: string
}

const { heading, lowerHeading, slug } = Astro.props
---

<a
  href={`/tags/${slug}`}
  class='group px-6 py-2 rounded-full flex content-center items-center gap-4 border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors'
>
  <img
    src={`/images/tags/${lowerHeading}.svg`}
    alt=`Logo ${heading}`
    class='w-8 h-8'
  />
  <h3 class='text-lg font-semibold text-gray-900 group-hover:text-blue-500'>
    {heading}
  </h3>
</a>
